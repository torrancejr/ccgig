<h2 class="mt-4">Edit <%= resource_name.to_s.humanize %></h2>
<div style="float: right;"><%= link_to "Back", :back, class: "button" %></div>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col">
        <%= f.label :first_name, "First Name" %><br/>
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="col">
        <%= f.label :last_name, "Last Name" %><br/>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :phone, "Phone Number" %><br/>
        <%= f.text_field :phone %>
      </div>

      <div class="col">
        <%= f.label :username, "Username (Used for reviews/quotes so pick something creative!)" %><br/>
        <%= f.text_field :username %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.label :email, "Email" %><br/>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br/>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.label :password_confirmation, "Password Confirmation" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="col">
        <%= f.label :current_password, "Current Password" %>
        <i>(we need your current password to confirm your changes)</i><br/>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>

